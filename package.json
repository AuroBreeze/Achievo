{
  "name": "achievo",
  "version": "1.2.4",
  "private": true,
  "description": "Achievo - 代码进步追踪器 (Electron + React + Tailwind + TypeScript)",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "license": "GPL-3.0-only",
  "author": "AuroBreeze",
  "scripts": {
    "dev": "concurrently -n vite,esb,app \"vite --port 5173\" \"npm:dev:electron\" \"wait-on dist-electron/main.cjs tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "dev:electron": "esbuild electron/main.ts electron/preload.ts --bundle --platform=node --outdir=dist-electron --external:electron --format=cjs --out-extension:.js=.cjs --watch",
    "build": "rimraf dist dist-electron && vite build && esbuild electron/main.ts electron/preload.ts --bundle --platform=node --outdir=dist-electron --external:electron --format=cjs --out-extension:.js=.cjs",
    "start": "electron .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-builder --win --mac --linux",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.windsurf.achievo",
    "productName": "Achievo",
    "copyright": "Copyright © 2025 AuroBreeze",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json",
      "node_modules/sql.js/dist/**"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "node_modules/sql.js/dist/**"
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "appx", "arch": ["x64"] }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "appx": {
      "identityName": "achievo", 
      "publisher": "CN=a6f56dab-f4ff-4042-a7a2-53d23d3f62eb",
      "publisherDisplayName": "Achievo",
      "displayName": "Achievo",
      "applicationId": "Achievo",
      "backgroundColor": "#202124",
      "languages": ["zh-CN", "en-US"],
      "artifactName": "${productName}-${version}-${arch}.msix"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Development",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "chart.js": "^4.4.4",
    "dotenv": "^16.4.5",
    "openai": "^4.56.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "remark-breaks": "^4.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.0",
    "highlight.js": "^11.10.0",
    "simple-git": "^3.27.0",
    "sql.js": "^1.10.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.1",
    "eslint": "^9.12.0",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14",
    "@tailwindcss/typography": "^0.5.13",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  }
}
